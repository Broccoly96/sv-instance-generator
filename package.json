{
  "name": "sv-instance-generator",
  "displayName": "SV Instance Generator",
  "description": "Generates instance code from SystemVerilog module definitions and copies it to the clipboard.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sv-instance-generator.instance"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sv-instance-generator.instance",
        "title": "Instance"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.70.0",
    "eslint": "^8.0.0",
    "typescript": "^4.0.0",
    "vscode-test": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Broccoly96/sv-instance-generator.git"
  },
  "license": "MIT"
}
